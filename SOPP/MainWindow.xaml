<ui:FluentWindow x:Class="SOPP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SOPP"
        mc:Ignorable="d"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        Title="系统优化++" Height="450" Width="800" WindowStyle="None" ResizeMode="NoResize">
    <Grid>

        <ui:TitleBar Name="TitleBar" Title="系统优化++" CanMaximize="False" ShowMaximize="False" Grid.ColumnSpan="2" Height="60"/>
        <DockPanel Name="MainDock" Grid.Column="1" Margin="0,62,0,0">
            <StackPanel Grid.Column="0">
                <ui:Button Name="HomeButton" Content="主页" Width="130" Height="65" CornerRadius="0,0,0,0" Click="HomeButton_Click"></ui:Button>
                <ui:Button Name="SystemButton" Content="系统优化" Width="130" Height="65" CornerRadius="0,0,0,0"></ui:Button>
                <ui:Button Name="CleanButton" Content="清理" Width="130" Height="65" CornerRadius="0,0,0,0"></ui:Button>
                <ui:Button Name="AboutButton" Content="关于" Width="130" Height="65" CornerRadius="0,0,0,0" Click="AboutButton_Click"></ui:Button>
                <ui:Button Name="ToolsButton" Content="小工具" Width="130" Height="65" CornerRadius="0,0,0,0" Click="ToolsButton_Click"></ui:Button>
                <ui:Button x:Name="SettingButton" Width="130" Height="65" CornerRadius="0,0,0,0" Content="设置" Click="SettingButton_Click"></ui:Button>
            </StackPanel>
            <Frame Name="PFrame" Grid.Column="1" NavigationUIVisibility="Hidden" Height="388"/>
        </DockPanel>
        <ProgressBar x:Name="ProgressShower" Visibility="Hidden" IsIndeterminate="True" Height="10" VerticalAlignment="Top" Margin="0,50,0,0" Grid.ColumnSpan="2" Grid.Row="2"/>
    </Grid>
</ui:FluentWindow>
<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SOPP"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml" x:Class="SOPP.SettingsPage"
      mc:Ignorable="d" 
      d:DesignHeight="390" d:DesignWidth="670"
      Title="SettingsPage">

    <Grid>

        <ui:TextBlock HorizontalAlignment="Left" Height="32" Margin="0,10,0,0" TextWrapping="Wrap" Text="系统优化++ &gt; 设置" VerticalAlignment="Top" Width="195" TextAlignment="Center" FontSize="20" Foreground="White"/>
        <ui:ToggleSwitch x:Name="autosaveTS" Content="自动保存设置" Margin="79,58,0,0" VerticalAlignment="Top" IsChecked="{Binding isAutoSaving}"/>
        <ui:ToggleSwitch x:Name="autosaveendTS" Content="在退出时自动保存设置" Margin="79,96,0,0" VerticalAlignment="Top"/>
        <ui:ToggleSwitch x:Name="logTS" Content="启用日志记录" Margin="79,136,0,0" VerticalAlignment="Top"/>

    </Grid>
</Page>
